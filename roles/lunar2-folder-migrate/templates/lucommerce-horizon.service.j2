[Unit]
Description=Laravel Horizon for Lucommerce
After=network.target

[Service]
User=deploy
Group=deploy
ExecStart=/usr/bin/php /home/deploy/lucommerce/artisan horizon
Restart=always
RestartSec=3
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=horizon

[Install]
WantedBy=multi-user.target