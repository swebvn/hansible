{
    on_demand_tls {
        ask https://{{ domain }}/on-demand-tls
    }
}

{{ domain }} {
    root * /home/deploy/{{ domain }}/public

    encode zstd gzip

    fast_cgi unix//run/php/php8.2-fpm.sock {
        resolve_root_symlink
    }

    file_server
}

